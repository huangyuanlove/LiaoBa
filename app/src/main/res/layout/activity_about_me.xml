<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".activity.SettingActivity">
    <RelativeLayout
        android:id="@+id/set_updata_password"
        style="@style/setting_relativelayoutstyle" >

        <ImageView
            android:id="@+id/updata_password_icon"
            style="@style/setting_imagestyle"
            android:src="@drawable/updata_password" />

        <TextView
            style="@style/setting_textviewstyle"
            android:layout_toRightOf="@+id/updata_password_icon"
            android:text="修改密码" />

        <ImageView style="@style/setting_dividelinestyle" />

        <ImageView style="@style/setting_arrowguide" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/set_suggest"
        style="@style/setting_relativelayoutstyle" >

        <ImageView
            android:id="@+id/suggest_icon"
            style="@style/setting_imagestyle"
            android:src="@drawable/set_suggest" />

        <TextView
            style="@style/setting_textviewstyle"
            android:layout_toRightOf="@+id/suggest_icon"
            android:text="反馈意见" />

        <ImageView style="@style/setting_dividelinestyle" />

        <ImageView style="@style/setting_arrowguide" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set_update"
        style="@style/setting_relativelayoutstyle" >

        <ImageView
            android:id="@+id/update_icon"
            style="@style/setting_imagestyle"
            android:src="@drawable/check_update" />

        <TextView
            style="@style/setting_textviewstyle"
            android:layout_toRightOf="@+id/update_icon"
            android:text="版本更新" />

        <ImageView style="@style/setting_dividelinestyle" />

        <ImageView style="@style/setting_arrowguide" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/set_about_me"
        style="@style/setting_relativelayoutstyle" >

        <ImageView
            android:id="@+id/problem_icon"
            style="@style/setting_imagestyle"
            android:src="@drawable/about_me" />

        <TextView
            style="@style/setting_textviewstyle"
            android:layout_toRightOf="@+id/problem_icon"
            android:text="关于作者" />

        <ImageView style="@style/setting_dividelinestyle" />

        <ImageView style="@style/setting_arrowguide" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/apk_desc"
            android:textSize="14dp"

            />
    </ScrollView>

</LinearLayout>
