<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MainActivity" >

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放"
        android:onClick="play"
        />

    <Button
        android:id="@+id/EQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="音效调节"
        />


    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止"
        android:onClick="stop"
        android:layout_below="@id/start"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stop"
        android:id="@+id/progress_and_time"
        >
        <SeekBar
            android:layout_marginTop="8dp"
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekBar"
            android:layout_alignRight="@id/seekBar"
            android:text="00:00"
            android:textSize="24sp"
            android:textColor="#00f"
            android:layout_marginTop="2dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/progress_and_time"
        >

    <com.huangyuanlove.liaoba.customui.ElasticListView
        android:id="@+id/listView"
        android:layout_weight="8"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        />
        <com.huangyuanlove.liaoba.customui.SideBar
            android:id="@+id/sideBar"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/music_dialog_text"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#00000000"
        android:gravity="center"
        android:textColor="#ff11aaff"
        android:textSize="30dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

</RelativeLayout>